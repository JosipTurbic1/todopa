<Page navigatingTo="onNavigatingTo">
  <ActionBar title="Aufgabe">
     <ActionItem text="Bearbeiten" tap="goToEdit" ios.position="right" android.position="actionBar" />
     <ActionItem text="Löschen" tap="deleteTask" ios.position="right" android.position="actionBar" />
  </ActionBar>

  <ScrollView>
    <StackLayout padding="12" spacing="12">

      <Label text="{{ title }}" class="h1" />

      <StackLayout>
        <Label text="{{ statusLabel }}" />
        <Label text="{{ priorityLabel }}" />
        <Label text="{{ deadlineLabel }}" />
      </StackLayout>

      <Label text="Status ändern" class="h2" />

      <StackLayout orientation="horizontal">
        <Button text="To Do" tap="setToDo" />
        <Button text="In Progress" tap="setInProgress" />
        <Button text="Done" tap="setDone" />
      </StackLayout>


      <StackLayout>
        <Label text="Beschreibung" class="h2" />
        <Label text="{{ descriptionLabel }}" textWrap="true" />
      </StackLayout>

      <Label text="{{ infoLabel }}"
             visibility="{{ hasInfo ? 'visible' : 'collapse' }}" />

    </StackLayout>
  </ScrollView>
</Page>
